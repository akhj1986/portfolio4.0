{
    "extends": ["react-app"],
    "rules": {
        "react-hooks/exhaustive-deps": "off",
        "prefer-const": "error",
        "lines-between-class-members": [
            "error",
            "always",
            { "exceptAfterSingleLine": true }
        ],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": ["const", "let", "var"],
                "next": "*"
            },
            {
                "blankLine": "never",
                "prev": ["const", "let", "var"],
                "next": ["const", "let", "var"]
            },
            {
                "blankLine": "always",
                "prev": ["block", "block-like", "multiline-const", "export"],
                "next": "*"
            },
            {
                "blankLine": "always",
                "prev": "*",
                "next": ["block", "block-like", "multiline-const", "export", "return"]
            },
            {
                "blankLine": "never",
                "prev": "case",
                "next": "*"
            }
        ]
    }
}
